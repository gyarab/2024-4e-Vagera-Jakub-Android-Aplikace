<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <!-- Left Side Panel -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:background="@drawable/empty_calendar_frame">

        <!-- Date -->
        <TextView
            android:id="@+id/optionsDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.3."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <!-- Month -->
        <TextView
            android:id="@+id/optionsMonthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan."
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"/>


        <!-- Divider -->
        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Icons (Eye Glasses, Suitcase, Flag) -->
        <ImageView
            android:id="@+id/vacationImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_remove_red_eye_24"

            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/workImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_inbox_24"

            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/holidayImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_flag_24"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/empty_calendar_frame"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"

            >

            <Button
                android:id="@+id/fromButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:backgroundTint="@color/black"
                android:padding="0dp"
                android:text="From" />

            <TextView
                android:id="@+id/fromTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="--:--"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/empty_calendar_frame"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            >

            <Button
                android:id="@+id/toButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:backgroundTint="@color/black"
                android:padding="0dp"
                android:text="To" />

            <TextView
                android:id="@+id/toTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="--:--"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/empty_calendar_frame"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="11dp"
            >

            <com.google.android.material.button.MaterialButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/copyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallButtonStyle"
                android:backgroundTint="@color/primary"
                app:icon="@drawable/baseline_content_copy_24"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:layout_marginStart="4dp"

                />
            <com.google.android.material.button.MaterialButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pasteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallButtonStyle"
                android:backgroundTint="@color/primary"
                app:icon="@drawable/baseline_content_paste_24"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:layout_marginStart="8dp"
                />
            <com.google.android.material.button.MaterialButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/allButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallButtonStyle"
                android:backgroundTint="@color/warning"
                app:icon="@drawable/baseline_browse_gallery_24"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:layout_marginStart="8dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <com.google.android.material.button.MaterialButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallButtonStyle"
                android:backgroundTint="@color/danger"
                app:icon="@drawable/baseline_remove_circle_outline_24"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />



        </LinearLayout>
    </LinearLayout>

