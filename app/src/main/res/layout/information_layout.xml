<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingEnd="20dp"
    android:orientation="vertical"
   >

    <!-- Material 3 CardView -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E0E0E0"

        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:focusable="true">

        <!-- Content inside the card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/colorImageView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/black"
                />
            <!-- Icon or Image -->
            <ImageView
                android:id="@+id/boardImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Error Icon"/>

            <!-- Title -->
            <TextView
                android:id="@+id/captionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is my title"
                android:textColor="#4D4D4D"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.divider.MaterialDivider

                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"/>
            <!-- Subtitle -->
            <TextView
                android:id="@+id/contentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter comment whdasdsa d sad as adsda s ads dassssssssssds a dsad saklfge akjfl anjk fajkfn waj jnkfaw njfka ky are you late"
                android:textColor="#4d4d4d"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:layout_marginTop="8dp"/>
            <com.google.android.material.divider.MaterialDivider

                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginEnd="5dp"
               android:gravity="center"
               android:layout_marginStart="5dp"
               android:layout_marginBottom="15dp">
               <androidx.cardview.widget.CardView
                   android:layout_height="30dp"
                   android:layout_width="30dp"
                   app:cardCornerRadius="15dp"
                   android:layout_marginStart="3dp">
                   <!--android:background="@drawable/border_profile"-->

                   <ImageView
                       android:id="@+id/profileImage2"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:contentDescription="@string/nav_header_desc"
                       android:shape="ring"

                       android:scaleType="centerCrop"
                       />
                   <ImageView
                       android:id="@+id/profileImage"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/nav_header_desc"
                       android:shape="ring"
                       />


               </androidx.cardview.widget.CardView>
               <TextView
                   android:id="@+id/nameTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Creator Name"
                   android:textColor="#1e1e1e"
                   android:textSize="14sp"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="5dp"

                   android:layout_marginTop="0dp"/>
               <Space
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1" />
               <TextView
                   android:id="@+id/creationTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="YYYY-MM-DD"
                   android:textColor="#4d4d4d"
                   android:textSize="14sp"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="5dp"

                   android:layout_marginTop="0dp"/>
           </LinearLayout>

            <!-- Button -->

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>